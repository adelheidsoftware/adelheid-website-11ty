<header class="site-header">
	<div class="wrapper">
		<div class="site-header__inner">
			<a href="/" aria-label="Home" class="site-header__brand">
				{% include "partials/brand.svg" %}
			</a>
			<nav class="[ nav ] [ site-header__nav ] [ font-sans ]" aria-label="Primary">
				<ul class="nav__list">
					{% for item in navigation.items %}
					<li>
						<a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>{{item.text }}</a>
					</li>
					{% endfor %}
				</ul>
			</nav>
		</div>
	</div>
</header>